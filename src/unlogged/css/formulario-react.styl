.casilleros
  display flex
  flex-direction column

.multiple
  border-top 0.5px solid colorFondoIdBloque
  font-size 120%
  margin-left 8px
  @media print
    margin-left 48px
    justify-content space-between
  @media (min-width 600px)
    margin-left 48px
    justify-content space-between
  display flex
  @media screen and (max-width 599px)
    flex-direction column
  > .encabezado
    .id
      margin-right 8px
      color colorFondoEncabezadoBloque
      background-color colorFondoIdBloque
      flex-shrink 0
      flex-grow 0
      text-align center
      min-width 24px
      width auto
      height 24px
      padding-top 2px
      vertical-align middle
      border-bottom-right-radius 7px
    min-width 50%
    flex-shrink 1
    @media print
      min-width 55%
    @media (min-width 600px)
      min-width 70%
  > .casilleros
    justify-self right
    align-self flex-end
    min-width 33%

.pregunta
  @media screen and (max-width 599px)
    flex-direction column
  display flex
  justify-content space-between
  border-top 1px solid colorFondoEncabezadoBloque
  &[nuestro-tipovar="opciones"]
    > .casilleros
      .MuiButton-root
        x-color blue
  &[nuestro-tipovar="si_no"]
    > .encabezado
      anchoNormal 70%
    > .casilleros
      anchoNormal 30%
  &[nuestro-tipovar="multiple"]
    display block
    > .encabezado
      width 100%
    > .casilleros
      width 100%
  > .encabezado
    anchoNormal 50%
    font-size 120%
    min-height 24px
    .id
      color colorFondoEncabezadoBloque
      background-color colorFondoIdBloque
      min-width 24px
      width auto
      min-height 24px
      padding-top 2px
      vertical-align middle
      border-bottom-right-radius 7px
    .nombre-div
      padding margenPregunta
  > .casilleros
    > .campo
      display flex
      flex-direction row
      margin-bottom margenPregunta
      .MuiButton-root
        margin-left 5px
      .input-campo
        max-width calc(100% - 40px)
      &[nuestra-longitud=full]
        .input-campo
          width 88%
        .boton-confirmar-campo
          width 20%
      &[nuestra-longitud=medium]
        .input-campo
          width 60%
        .boton-confirmar-campo
          width 40%
      &[nuestra-longitud=small]
        .input-campo
          width 30%
        .boton-confirmar-campo
          width 70%
      &[nuestra-longitud="3"]
        .input-campo
          width 40px
      &[nuestra-longitud="2"]
        .input-campo
          width 28px
  > .casilleros, > div .casilleros
    align-self flex-end
    anchoNormal 50%
    > .variable
      margin-bottom margenPregunta

