colorFondoEncabezadoBloque = #888
margenPregunta = 16px
colorFondoIdBloque = #DDD

anchoNormal(ancho)
  @media (min-width 600px)
    width ancho

.formulario
  max-width 768px
  background-color #EEE

.encabezado
  display flex
  .id
    align-self flex-start
    justify-self flex-start
    text-align center
    flex-shrink 0
  .nombre-div
    flex-grow 2
    align-self flex-start
    justify-self baseline
    .aclaracion
      font-size 90%

.casilleros
  display flex
  flex-direction column

.multiple
  border-top 0.5px solid colorFondoIdBloque
  font-size 120%
  margin-left 8px
  @media (min-width 600px)
    margin-left 48px
  display flex
  @media (max-width 599px)
    flex-wrap wrap
    justify-content space-between
  .id
    margin-right 16px
    color colorFondoEncabezadoBloque
    background-color colorFondoIdBloque
    flex-shrink 0
    flex-grow 0
    text-align center
    min-width 24px
    width auto
    height 24px
    padding-top 2px
    vertical-align middle
    border-bottom-right-radius 7px
  .nombre-div
    min-width 50%
    flex-shrink 1
    @media (min-width 600px)
      min-width 60%

[nuestro-bloque="S"]
  .pregunta
    > .encabezado
      .nombre-div
        .nombre
          color black

.pregunta
  @media (max-width 559px)
    flex-direction column
  display flex
  justify-content space-between
  border-top 1px solid colorFondoEncabezadoBloque
  &[nuestro-tipovar="opciones"]
    > .casilleros
      .MuiButton-root
        x-color blue
  &[nuestro-tipovar="si_no"]
    > .encabezado
      anchoNormal 70%
    > .casilleros
      anchoNormal 30%
  &[nuestro-tipovar="multiple"]
    display block
    > .encabezado
      width 100%
    > .casilleros
      width 100%
  > .encabezado
    anchoNormal 50%
    font-size 120%
    min-height 24px
    .id
      color colorFondoEncabezadoBloque
      background-color colorFondoIdBloque
      min-width 24px
      width auto
      min-height 24px
      padding-top 2px
      vertical-align middle
      border-bottom-right-radius 7px
    .nombre-div
      padding margenPregunta
  > .casilleros
    align-self flex-end
    anchoNormal 50%
    > .variable
      margin-bottom margenPregunta

.bloque
  > .encabezado
    background colorFondoEncabezadoBloque
    font-size 100%
    min-height 24px
    .id
      color colorFondoEncabezadoBloque
      background-color colorFondoIdBloque
      min-width 24px
      min-height 24px
      padding-top 2px
      vertical-align middle
      border-bottom-right-radius 7px
    .nombre-div
      margin 8px
      text-align center
      color colorFondoIdBloque

[nuestro-validator=optativa_sd]
  background-color #FFe
[nuestro-validator=valida]
  color #050
[nuestro-validator=actual]
  background-color #FFF
  &[debe-leer]
    color blue
  [debe-leer]
    color blue
[nuestro-validator=omitida]
  background repeating-linear-gradient(45deg, #fff, #fff 10px, #ff9 10px, #ff9 12px)
[nuestro-validator=fuera_de_flujo_por_salto]
  background repeating-linear-gradient(45deg, #BBB, #BBB 10px, #f66 10px, #f66 12px)
[nuestro-validator=invalida]
  background repeating-linear-gradient(45deg, #eee, #eee 10px, #f99 10px, #f99 12px)
[nuestro-validator=todavia_no]
  color #888
[nuestro-validator=calculada]
  input
    background-color #BBB
[nuestro-validator=salteada]
  background-color #BBB
[nuestro-validator=todavia_no]
  color #888
[nuestro-validator=fuera_de_flujo_por_omitida]
  background repeating-linear-gradient(45deg, #eee, #eee 10px, #fcc 10px, #fcc 12px)


